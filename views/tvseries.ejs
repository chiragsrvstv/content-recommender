</div>
<div>
<button class="positive ui button"> Recommend A TV Series !  </button>
</div>
</form>


<h2> Most popular on TV </h2>
<div class="ui medium images">
  <% data["results"].forEach(function(tvs){ %>
    <a class="ui medium image" href="#"> <%=tvs.name;%>
      <img src="https://image.tmdb.org/t/p/original<%=tvs.poster_path;%>" alt="poster image">
    </a>
  <% }); %>
</div>

</div>

