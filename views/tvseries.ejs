    <div>
  <input type="checkbox" name="genre" value="10759">
  <label> Action & Adventure </label>
  <input type="checkbox" name="genre" value="18">
  <label> Drama </label>
  <input type="checkbox" name="genre" value="35">
  <label> Comedy </label>
