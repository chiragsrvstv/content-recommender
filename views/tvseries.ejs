  <input type="checkbox" name="genre" value="16">
  <label> Animation </label>
  <input type="checkbox" name="genre" value="10764">
  <label> Reality </label>
  <input type="checkbox" name="genre" value="10765">
  <label> Sci-Fi & Fantasy </label>
  <input type="checkbox" name="genre" value="10751">
  <label> Family </label>
